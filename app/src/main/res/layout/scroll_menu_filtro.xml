<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundtransparent">

    <LinearLayout
        android:id="@+id/linearLayoutScrollFiltro"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBicicleta"
            android:layout_width="@dimen/size_icon_filtro"
            android:layout_height="@dimen/size_icon_filtro"
            android:src="@drawable/bicicleta"
            android:padding="@dimen/padding_icon_filtro"/>
        <ImageView
            android:id="@+id/btnCartao"
            android:layout_width="@dimen/size_icon_filtro"
            android:layout_height="@dimen/size_icon_filtro"
            android:background="@null"
            android:src="@drawable/cartao"
            android:padding="@dimen/padding_icon_filtro"/>
        <ImageView
            android:id="@+id/btnCel"
            android:layout_width="@dimen/size_icon_filtro"
            android:layout_height="@dimen/size_icon_filtro"
            android:background="@null"
            android:src="@drawable/cel"
            android:padding="@dimen/padding_icon_filtro"/>
        <ImageView
            android:id="@+id/btnDocumento"
            android:layout_width="@dimen/size_icon_filtro"
            android:layout_height="@dimen/size_icon_filtro"
            android:background="@null"
            android:src="@drawable/documento"
            android:padding="@dimen/padding_icon_filtro"/>
        <ImageView
            android:id="@+id/btnMochila"
            android:layout_width="@dimen/size_icon_filtro"
            android:layout_height="@dimen/size_icon_filtro"
            android:background="@null"
            android:src="@drawable/mochila"
            android:padding="@dimen/padding_icon_filtro"/>
        <ImageView
            android:id="@+id/btnMoney"
            android:layout_width="@dimen/size_icon_filtro"
            android:layout_height="@dimen/size_icon_filtro"
            android:background="@null"
            android:src="@drawable/money"
            android:padding="@dimen/padding_icon_filtro"/>
        <ImageView
            android:id="@+id/btnPc"
            android:layout_width="@dimen/size_icon_filtro"
            android:layout_height="@dimen/size_icon_filtro"
            android:background="@null"
            android:src="@drawable/pc"
            android:padding="@dimen/padding_icon_filtro"/>
        <ImageView
            android:id="@+id/btnPlus"
            android:layout_width="@dimen/size_icon_filtro"
            android:layout_height="@dimen/size_icon_filtro"
            android:background="@null"
            android:src="@drawable/plus"
            android:padding="@dimen/padding_icon_filtro"/>

    </LinearLayout>
</HorizontalScrollView>