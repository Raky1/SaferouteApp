<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundtransparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bicicleta"
            android:background="@null"
            android:paddingStart="@dimen/padding_icon_filtro"
            android:paddingEnd="@dimen/padding_icon_filtro" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cartao"
            android:background="@null"
            android:paddingStart="@dimen/padding_icon_filtro"
            android:paddingEnd="@dimen/padding_icon_filtro"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cel"
            android:background="@null"
            android:paddingStart="@dimen/padding_icon_filtro"
            android:paddingEnd="@dimen/padding_icon_filtro" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/documento"
            android:background="@null"
            android:paddingStart="@dimen/padding_icon_filtro"
            android:paddingEnd="@dimen/padding_icon_filtro" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mochila"
            android:background="@null"
            android:paddingStart="@dimen/padding_icon_filtro"
            android:paddingEnd="@dimen/padding_icon_filtro" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/money"
            android:background="@null"
            android:paddingStart="@dimen/padding_icon_filtro"
            android:paddingEnd="@dimen/padding_icon_filtro" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pc"
            android:background="@null"
            android:paddingStart="@dimen/padding_icon_filtro"
            android:paddingEnd="@dimen/padding_icon_filtro" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
            android:background="@null"
            android:paddingStart="@dimen/padding_icon_filtro"
            android:paddingEnd="@dimen/padding_icon_filtro" />

    </LinearLayout>
</HorizontalScrollView>